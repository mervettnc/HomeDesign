<div class="site-section ">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <span class="caption d-block mb-2 font-secondary font-weight-bold">Procets</span>
                <h2 class="site-section-heading text-uppercase text-center font-secondary">Share Before You Download</h2>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 block-13 nav-direction-white">
                <div class="nonloop-block-13 owl-carousel">
                    @foreach (var project in Model.Projects)
                    {

                        <div class="media-image">

                            <img src="~/Images/bohem-yatak-odalari.jpg" class="img-fluid" />
                            <div class="media-image-body">
                                <h2 class="font-secondary text-uppercase">@project.Title</h2>
                                <span class="d-block mb-3">By <a href="#">@project.User.DisplayName</a> &mdash; @project.CreationTime.Value.ToShortDateString()</span>
                                @Html.Raw(project.Content)
                                <p><a href="@Url.Action("Show","Project",new { slug=project.Slug})" class="btn btn-primary text-white px-4">Read More</a></p>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>

    </div>
</div>



<div class="site-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-12" data-aos="fade">
                <h2 class="site-section-heading text-center text-uppercase">inspiring designs</h2>
            </div>
        </div>
        <div class="row">
            @foreach (var project in Model.Projects)
            {
                <div class="col-md-6 col-lg-4 mb-5" data-aos="fade-up" data-aos-delay="100">
                    <div class="media-image">
                        <a href="#">
                            <img src="~/Images/bohem-yatak-odalari.jpg" class="img-fluid" />
                        </a>
                        <div class="media-image-body">
                            <h2 class="font-secondary text-uppercase">@project.Title</h2>
                            <span class="d-block mb-3">By <a href="#">@project.User.DisplayName</a> &mdash; @project.CreationTime.Value.ToShortDateString()</span>
                            <p>@project.Content</p>

                            <p><a href="#">Read More</a></p>
                        </div>
                    </div>
                </div>

            }

        </div>
    </div>
</div>

<div class="py-5 bg-primary">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-md-6 text-center mb-3 mb-md-0">
                <h2 class="text-uppercase text-white mb-4" data-aos="fade-up">Try For Your Next Project</h2>
                <a href="#" class="btn btn-bg-primary font-secondary text-uppercase" data-aos="fade-up" data-aos-delay="100">Contact Us</a>
