
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>HomeDesign| @ViewBag.Title </title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Areas/Admin/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="~/Areas/Admin/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link href="~/Areas/Admin/plugins/toastr/toastr.min.css" rel="stylesheet" />
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/Areas/Admin/dist/css/adminlte.min.css">
    <link href="~/Areas/Admin/dist/css/admin.custom.css" rel="stylesheet" />
    <!-- summernote -->
    <link rel="stylesheet" href="~/Areas/Admin/plugins/summernote/summernote-bs4.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.4/croppie.min.css" />


    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="@Url.Action("Index","Home",new {area="" })" class="nav-link">Visit the WebSite</a>
                </li>
                @*<li class="nav-item d-none d-sm-inline-block">
                    <a href="#" class="nav-link">Contact</a>
                </li>*@
            </ul>

            
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="@Url.Action("Index","Dashboard")" class="brand-link">
                <img src="~/Areas/Admin/dist/img/AdminLTELogo.png"
                     alt="AdminLTE Logo"
                     class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light">Administration</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">

                        <img src="~/Areas/Admin/dist/img/default-user.jpg"  class="img-circle elevation-2" alt="User Image" /> 
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">@User.Identity.DisplayName()</a>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column nav-child-indent" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item" >
                            @MenuLink("Dashboard", "Index", "Dashboard", "fas fa-tachometer-alt")

                        </li>

                        <li class="nav-item has-treeview menu-open">
                            @MenuLink("Categories", "", "Categories", "fas fa-table", true)

                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    @MenuLink("Categories", "Index", "Categories", "fas fa-list")

                                </li>
                                <li class="nav-item">
                                    @MenuLink("Add New Categories", "New", "Categories", "far fa-plus-square")

                                </li>

                            </ul>
                        </li>

                        <li class="nav-item has-treeview menu-open">
                            @MenuLink("Project", "", "Projects", "fab fa-cotton-bureau", true)

                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    @MenuLink("List Projects", "Index", "Projects", "fas fa-list")

                                </li>
                                <li class="nav-item">
                                    @MenuLink("Add New Project", "New", "Projects", "far fa-plus-square")

                                </li>

                            </ul>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>@ViewBag.Title</h1>
                        </div>
                        <div class="col-sm-6">
                            @Html.Partial("_BreadcrumbPartial")
                        </div>
                    </div>
                </div><!-- /.container-fluid -->
            </section>

            <!-- Main content -->
            <section class="content">

                @RenderBody()

            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <footer class="main-footer">
            <div class="row  text-center">
                <div class="col-md-12">
                    <p>

                        Copyright ©
                        <script type="text/javascript">document.write(new Date().getFullYear());</script> All rights reserved

                    </p>
                </div>
            </div>
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>

    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/Areas/Admin/plugins/jquery/jquery.min.js"></script>
    <!-- jQuery  Validation-->
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Areas/Admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- DataTables -->
    <script src="~/Areas/Admin/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Areas/Admin/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Areas/Admin/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/Areas/Admin/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/Areas/Admin/plugins/toastr/toastr.min.js"></script>
    <script src="~/Areas/Admin/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Areas/Admin/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/Areas/Admin/dist/js/demo.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.4/croppie.min.js"></script>


    <script src="~/Areas/Admin/dist/js/admin.custom.js"></script>
    <!-- Summernote -->
    <script src="~/Areas/Admin/plugins/summernote/summernote-bs4.min.js"></script>
    @RenderSection("scripts", false)

    <script>
        @if (TempData["SuccessMessage"] !=null)
    {
        <text>
        toastr.success('@(TempData["SuccessMessage"])');
        </text>
    }
        @if (TempData["ErrorMessage"] !=null)
    {
        <text>
        toastr.error('@(TempData["ErrorMessage"])');
        </text>
    }
    </script>
</body>
</html>
@helper MenuLink(string linkText, string actionName, string controllerName, string iconClass, bool isParent = false)
{

    var currentController = this.ViewContext.RouteData.Values["controller"].ToString();
    var currentAction = this.ViewContext.RouteData.Values["action"].ToString();

    bool isActive = controllerName == currentController && (isParent || actionName == currentAction);

    <a href="@Url.Action(actionName, controllerName)" class="nav-link @(isActive ? "active" : "")">
        <i class="nav-icon @iconClass"></i>
        <p>
            @linkText
            @if (isParent)
            {
                <i class="right fas fa-angle-left"></i>
            }
        </p>
    </a>
}